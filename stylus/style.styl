@import 'nib'

color1 = #000
color2 = #fff
bgcolor1 = #fff
bgcolor2 = #ddd
bgcolor3 = #42c5fa
bgcolor4 = #F99548

.top-bar, .top-bar-section li a, .top-bar .name h1 a, .top-bar expanded, .left-off-canvas-menu
  background bgcolor1
  color color1

.top-bar .name h1 a
  font-size 1.65em
  font-weight 500
  font-family 'Gudea', sans-serif
  position relative

.top-bar
  border-color color1
  border-width 0
  border-bottom 1px
  border-style solid

ul
  &.title-area
    background bgcolor1 !important
  &.right
    li
      a
        font-size 0.875rem
        color color1
        text-transform uppercase
        display block
        font-weight 200
        letter-spacing 1px
        position relative
  &.off-canvas-list
    li
      label
        border-top none
        background-color bgcolor2
        color color1
      label.flabel
        text-transform none
        font-weight normal
        display inline
        background-color bgcolor1
        font-size 0.9rem
        padding 0
        margin 0
      a
        border 0
        color color1
        background-color bgcolor2
    p
      color color1
      display inline-block
      margin 0
    div
      &.ui-slider
        width 90%
        margin 0 auto
  &.off-canvas-submenu
    list-style-type none
    margin-left 0.1rem

.tab-bar
  background-color rgba(250, 250, 250, 0)
  float left
  .menu-icon
    span
      &:after
        height 0.1rem
        margin-top -0.3rem
        box-shadow 0 -3px 0px 1px #333, 0 4px 0 1px #333, 0 11px 0 1px #333
      &:hover
        &:after
          box-shadow 0 -3px 0 1px #b3b3b3, 0 4px 0 1px #b3b3b3, 0 11px 0 1px #b3b3b3

.top-bar .toggle-topbar.menu-icon a
  color color1
  & span::after
    height 0.1rem
    margin-top -0.3rem
    box-shadow 0 -3px 0px 1px #333, 0 4px 0 1px #333, 0 11px 0 1px #333
  &:hover
    &:after
      box-shadow 0 -3px 0 1px #b3b3b3, 0 4px 0 1px #b3b3b3, 0 11px 0 1px #b3b3b3

.move-right
  .exit-off-canvas
    box-shadow 1px 0px 2px rgba(0, 0, 0, 0.5), 1px 0px 2px rgba(0, 0, 0, 0.5)

.visual
  height 100%

input
  &.button
    background-color #666

form.filterselect
  max-height 250px
  border 1px solid #ccc

.fbox
  overflow-y auto
  overflow-x auto
  white-space nowrap
  max-height inherit

.hero
  margin auto
  background-color bgcolor3
  height 32rem
  font-family Gudea
  .intro
    padding 2rem
    position relative
  h1
    font-size 2rem
    line-height 1.5em
    letter-spacing -0.025em
    font-weight 400
    text-align center
    font-family inherit
  p
    line-height 1.75em
    font-weight 200
    text-align center
    margin-bottom 2rem
    color inherit
    font-size 1.0rem
    font-weight 300
    text-align center
  a
    &.button
      margin 0 auto
      display block
      background-color rgba(0, 0, 0, 0)
      border-style solid
      border-color color1
      border-width 2px
      font-size 1rem
      width 10rem
      color color1
      font-family inherit
      &:hover
        background color1
        color #fff
        transition all .3s ease-in-out

.left-small
  border-right 0px

.features
  margin-top: 10px
  text-align center
  hr
    width 25%
    margin 1rem auto
  .round-icon
    background-color bgcolor4
    border-radius 50%
    display table
    height 100px
    margin -61px auto 1rem
    width 100px
    font-size 3rem
    span
      color color2
      display table-cell
      text-align center
      vertical-align middle

form.uploader
  margin 10px

form.uploader input.file-input
  top 0
  right 0
  margin 0
  padding 0
  cursor pointer

@media only screen and (min-width: 40.0625em)
  nav.top-bar
      overflow hidden
  .hero
    h1
      padding-top 4.5rem
      font-size 3.5rem
      text-align center
    p
      font-size:1.5em
    a.button, input[type='submit']
      border-width 2px
      font-size 1.3rem
      width 16rem
  .top-bar
    max-width 1280px
    margin 0 auto
  .top-bar-section
    ul
      margin-left 1em
    li:not(.has-form) a:not(.button)
      background bgcolor1
@media only screen and (max-width: 40.0625em)
  .features .columns
      margin-bottom 5rem
