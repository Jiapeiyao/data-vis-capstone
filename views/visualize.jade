extend vistemplate
block sidelist
	ul.off-canvas-list
		li
			label Visualization
		li
			select(id='VisualList')
				option(value='' selected='selected' disabled="disabled") Choose Visual
				option(value='bar') bar
				option(value='scatter') scatter
		li
			label Table
		li
			select(id='TableList')
				option(value='' selected='selected' disabled="disabled") Choose Table
				each item in tables
					option(value=item.table_name) #{item.table_name}
	

		li
			a.off-canvas-submenu-call(href='#')
				| Filters
				span.right +

		ul#filters.off-canvas-submenu
			li
				a(href='#') Sub menu 1
			li
				a(href='#') Sub menu 2
			li
				a(href='#') Sub menu 3

		li
			input(type='button', value='Apply', onclick='generateBar()')
			input(type='button', value='ApplyScatterPlot', onclick='generateScatter()')
		


block scripts
	script(src='/js/three.min.js')
	script(src='js/TextGeometry.js')
	script(src='js/FontUtils.js')
	script(src='js/helvetiker_regular.typeface.js')
	script(src='/js/OrbitControls.js')
	script(src='/js/scatter.js')
	script(src='/js/init.js')
	script(src='/js/bars.js')
